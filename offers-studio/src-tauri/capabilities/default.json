{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "dialog:default",
    "dialog:allow-open",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$RESOURCE/**" },
        { "path": "$APPDATA/**" },
        { "path": "$HOME/**" },
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$RESOURCE/**" },
        { "path": "$APPDATA/**" },
        { "path": "$HOME/**" },
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        { "path": "$RESOURCE/**" },
        { "path": "$APPDATA/**" },
        { "path": "$HOME/**" },
        { "path": "**" }
      ]
    },
    "shell:allow-open"
  ]
}
